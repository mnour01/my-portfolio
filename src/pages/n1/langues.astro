---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Langues – Mehdi Nour">
  <section class="content">
    <h1>Langues parlées</h1>

    <div class="lang-grid">
      <div class="lang-card">
        <h2>Français</h2>
        <p>Bilingue</p>
      </div>

      <div class="lang-card">
        <h2>Arabe</h2>
        <p>Bilingue</p>
      </div>

      <div class="lang-card">
        <h2>Anglais</h2>
        <p>Courant</p>
      </div>
    </div>
  </section>

  <style>
    .content {
      max-width: 800px;
      margin: auto;
      padding: 3rem 2rem;
    }

    h1 {
      text-align: center;
      font-size: 2rem;
      color: var(--accent);
      margin-bottom: 2.5rem;
    }

    .lang-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5rem;
    }

    .lang-card {
      background: #1a1f2e;
      padding: 2rem 1rem;
      border-radius: 10px;
      box-shadow: 0 0 12px rgba(0, 224, 198, 0.08);
      text-align: center;
      transition: transform 0.2s ease;
    }

    .lang-card:hover {
      transform: translateY(-5px);
    }

    .lang-card h2 {
      margin-bottom: 0.8rem;
      color: var(--accent-light);
    }

    .lang-card p {
      font-size: 1.1rem;
      color: #cbd5e1;
    }

    @media (max-width: 768px) {
      .content {
        padding: 2rem 1rem;
      }
    }
  </style>
</BaseLayout>
